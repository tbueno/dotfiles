#local bin
export PATH=/usr/local/bin:$PATH


#rbenv
eval "$(rbenv init - zsh)"

# Sublime
PATH="/Applications/Sublime Text.app/Contents/SharedSupport/bin:$PATH"
EDITOR=subl

# GO
export GOPATH=$HOME/dev/go
export GOROOT=/usr/local/opt/go/libexec
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:$GOROOT/bin

# Terraform & Terragrunt
export PATH=/Users/bueno/dev/tools/terraform:$PATH
export PATH=/Users/bueno/dev/tools/terragrunt:$PATH

export NVM_DIR=~/.nvm
. $(brew --prefix nvm)/nvm.sh

# Python executables
export PATH=/usr/local/opt/python/libexec/bin:$PATH


export PATH="/usr/local/opt/gpg-agent/bin:$PATH"
# Pynentry configuration for GPG
if [ -f ~/.gnupg/.gpg-agent-info ] && [ -n "$(pgrep gpg-agent)" ]; then
    source ~/.gnupg/.gpg-agent-info
    export GPG_AGENT_INFO
else
    eval $(gpg-agent --daemon --write-env-file ~/.gnupg/.gpg-agent-info)
fi

# Python configuration
PYTHON_USER_BASE_PATH=$(python -m site --user-base)
export PATH=$PATH:$PYTHON_USER_BASE_PATH/bin