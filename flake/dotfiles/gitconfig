[alias]
st  = status
pom = push origin master
pr  = pull --rebase
ca  = commit --amend
lp = log -p
d = diff
ds = diff --staged
l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
lg = log --graph --oneline --decorate --color --all
b = branch
cp = cherry-pick

[color]
branch = auto
diff = auto
status = auto

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold

[remote "<nickname>"]
url = <url>
fetch = <refspec>

